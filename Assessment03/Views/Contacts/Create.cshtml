@using Assessment03.Utilities
@model Assessment03.Models.ViewModels.ContactCreateViewModel
@{
    ViewData["Title"] = "Contacts - Create";
}
<div class="text-center">
    <h4>Create Contact</h4>
</div>
<form method="post" asp-action="SubmitCreate">
    <div class="form-group">
        <div class="form-group">
            @Html.CustomTextBox(model => model.FirstName)
        </div>
        <div class="form-group">
            @Html.CustomTextBox(model => model.LastName)
        </div>
        <div class="form-group">
            @Html.CustomTextBox(model => model.Email)
        </div>
        <div class="form-group">
            @Html.CustomTextBox(model => model.MobilePhone)
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary"/>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>
